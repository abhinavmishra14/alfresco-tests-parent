<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="generation" class="it.vige.activiti.Generation"  parent="baseJavaDelegate" depends-on="activitiBeanRegistry">
		<property name="nodeService" ref="nodeService" />
		<property name="searchService" ref="searchService" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="fileFolderService" ref="fileFolderService" />
		<property name="pdaFolder">
			<value>${mcc.contratti.pda.folder}</value>
		</property>
	</bean>
	
	<bean id="${project.artifactId}.workflowBootstrap" parent="workflowDeployer" depends-on="generation">
		<property name="workflowDefinitions">
			<list>
				<props>
					<prop key="engineId">activiti</prop>
					<prop key="location">alfresco/module/${project.artifactId}/workflow/SimpleProcess.bpmn</prop>
					<prop key="mimetype">text/xml</prop>
					<prop key="redeploy">true</prop>
				</props>
			</list>
		</property>
	</bean>

</beans>
